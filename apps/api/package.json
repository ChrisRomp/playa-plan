{
  "name": "api",
  "version": "0.1.0",
  "description": "PlayaPlan API service",
  "author": "Chris Romp",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node ./dist/src/main.js",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ./dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS=--unhandled-rejections=strict jest --config jest.config.js",
    "test:watch": "NODE_OPTIONS=--unhandled-rejections=strict jest --watch --config jest.config.js",
    "test:cov": "NODE_OPTIONS=--unhandled-rejections=strict jest --coverage --config jest.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config jest.config.js",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:init": "npm run prisma:migrate:prod && npm run seed:dev",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --name dev-migration --schema=./prisma/schema.prisma",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate dev --name test-migration --schema=./prisma/schema.prisma",
    "prisma:migrate:prod": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=./prisma/schema.prisma --force",
    "prisma:reset:test": "dotenv -e .env.test -- prisma migrate reset --schema=./prisma/schema.prisma --force",
    "prisma:studio": "prisma studio --schema=./prisma/schema.prisma",
    "seed": "ts-node ./prisma/seeds/seed.ts",
    "seed:dev": "ts-node ./prisma/seeds/seed.ts",
    "seed:dev:force": "FORCE_RESEED=true ts-node ./prisma/seeds/seed.ts",
    "seed:test": "dotenv -e .env.test -- ts-node ./prisma/seeds/seed.ts",
    "seed:test:force": "dotenv -e .env.test -- FORCE_RESEED=true ts-node ./prisma/seeds/seed.ts",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate:dev && npm run seed:dev",
    "db:setup:test": "npm run prisma:generate && npm run prisma:migrate:test && npm run seed:test"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seeds/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@playa-plan/types": "file:../../libs/types",
    "@prisma/client": "^6.7.0",
    "@sendgrid/mail": "^8.1.5",
    "bcrypt": "^5.1.1",
    "cache-manager": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "commander": "^4.1.1",
    "cookie-parser": "^1.4.7",
    "helmet": "^7.2.0",
    "iterare": "^1.2.1",
    "joi": "^17.13.3",
    "keyv": "^5.3.3",
    "load-esm": "^1.0.2",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.17.0",
    "stripe": "^14.25.0",
    "uid": "^2.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/sanitize-html": "^2.15.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "dotenv-cli": "^7.4.4",
    "jest": "^29.7.0",
    "prisma": "^6.9.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
