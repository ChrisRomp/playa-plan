{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "rootDir": ".",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "composite": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
  }
